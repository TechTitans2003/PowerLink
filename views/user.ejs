<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Boxicons -->
    <link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
    <!-- My CSS -->
    <link rel="stylesheet" href="/css/style.css">

    <title>PowerLink</title>
</head>

<body class="dark">


    <!-- SIDEBAR -->
    <section id="sidebar">
        <a href="" class="brand">
            <i class='bx bxs-smile'></i>
            <span class="text">PowerLink</span>
        </a>
        <ul class="side-menu top">
            <li>
                <a href="/user/dashboard">
                    <i class='bx bxs-dashboard'></i>
                    <span class="text">Dashboard</span>
                </a>
            </li>
            <li>
                <a href="/user/analytics">
                    <i class='bx bxs-doughnut-chart'></i>
                    <span class="text">Analytics</span>
                </a>
            </li>
            <li>
                <a href="/user/device">
                    <i class='bx bxs-message-dots'></i>
                    <span class="text">Device</span>
                </a>
            </li>
            <li>
                <a href="/user/info">
                    <i class='bx bxs-group'></i>
                    <span class="text">User</span>
                </a>
            </li>
        </ul>
        <ul class="side-menu">
            <li>
                <a href="#">
                    <i class='bx bxs-cog'></i>
                    <span class="text">Settings</span>
                </a>
            </li>
            <li>
                <a href="/logout" class="logout">
                    <i class='bx bxs-log-out-circle'></i>
                    <span class="text">Logout</span>
                </a>
            </li>
        </ul>
    </section>
    <!-- SIDEBAR -->



    <!-- CONTENT -->
    <section id="content">
        <!-- NAVBAR -->
        <nav>
            <i class='bx bx-menu'></i>
            <!-- <form action="#">
				<div class="form-input">
					<input type="search" placeholder="Search...">
					<button type="submit" class="search-btn"><i class='bx bx-search'></i></button>
				</div>
			</form> -->
            <!-- <input type="checkbox" id="switch-mode" hidden>
			<label for="switch-mode" class="switch-mode"></label> -->
            <a href="#" class="notification" style="margin-left: auto;">
                <i class='bx bxs-bell'></i>
                <span class="num">8</span>
            </a>
            <a href="#" class="profile">
                <img src="img/people.png">
            </a>
        </nav>
        <!-- NAVBAR -->

        <!-- MAIN -->
        <main>
            <div class="head-title">
                <div class="left">
                    <h1>User Info
                    </h1>
                    <ul class="breadcrumb">
                        <li>
                            <a href="">User</a>
                        </li>
                        <li><i class='bx bx-chevron-right'></i></li>
                        <li>
                            <a class="active" href="">
                                Profile
                            </a>
                        </li>
                    </ul>
                </div>
                <a href="#" class="btn-download">
                    <i class='bx bxs-cloud-download'></i>
                    <span class="text">Download PDF</span>
                </a>
            </div>

            <div class="user-data">
                <div class="user-form">
                    <form action="">
                        <div class="form-group">
                            <label for="name">Name</label>
                            <input type="text" value="<%= user.name %>" id="name" disabled>
                        </div>
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="text" value="<%= user.email %>" id="email" disabled>
                        </div>
                        <div class="form-group">
                            <label for="phone">Phone</label>
                            <input type="text" value="<%= user.phone %>" id="phone" disabled>
                        </div>
                    </form>
                </div>
            </div>

            <div class="table-data">
                <div class="order">
                    <div class="head">
                        <h3>Devices info</h3>
                        <i class='bx bx-search'></i>
                        <i class='bx bx-filter'></i>
                    </div>
                    <table>
                        <thead>
                            <tr>
                                <th>Fine</th>
                                <th>Problem Indentified</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><img src="/img/pole-red.png" alt=""></td>
                                <td><img src="/img/pole-green.png" alt=""></td>
                            </tr>
                            <tr>
                                <td>
                                    <%= devices.filter(device => device.current >= 10).length %>
                                </td>
                                <td>
                                    <%= devices.filter(device => device.current <= 10).length %>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

        </main>
        <!-- MAIN -->
    </section>
    <!-- CONTENT -->


    <script src="/js/script.js"></script>
</body>

</html>